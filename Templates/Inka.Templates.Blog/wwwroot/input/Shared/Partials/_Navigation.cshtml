@using Inka.Modules.Documents.Razor.Navs
@model Inka.Modules.Documents.Razor.SiteViewModel

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    @{
                        Nav postsNav = Model.Navs.GetNavByXRef("posts", "/posts/");
                        <a class="nav-link" href="@postsNav.Route">@postsNav.Title</a>
                    }
                </li>
                <li class="nav-item">
                    @{
                        Nav aboutNav = Model.Navs.GetNavByXRef("about");
                        <a class="nav-link" href="@aboutNav.Route">@aboutNav.Title</a>
                    }
                </li>
            </ul>
        </div>
    </div>
</nav>